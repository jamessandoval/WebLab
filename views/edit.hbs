<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6" style="align-content: center">
            <h2 class="page-header">Edit Post</h2> {{#if errors}} {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
            {{/each}} {{/if}}
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            {{#posts}}
            <form method="post" action="/user/editpost">
                <div class="form-group">
                    <label>Id:</label>
                    <input type="text" class="form-control input-lg" name="id" value="{{_id}}" readonly><br>
                    <label>Title:</label>
                    <input type="text " class="form-control input-lg " placeholder="Title " name="title" value="{{title}}">
                </div>
                <div class="form-group ">
                    <label>State:</label>
                    <select class="form-control input-lg " name="state">
                        <option>{{state}}</option>
                        <option>Draft</option>
                        <option>Publish</option>
                        <option>Archive</option>
                    </select>
                    <span class="help-block ">Maybe you'd like to publish this</span>
                </div>
                <div class="form-group ">
                    <label>URL:</label>
                    <input type="text " class="form-control input-lg " placeholder="URL " name="url" value="{{url}}">
                </div>
                <div class="form-group " id="datepicker">
                    <label>Date:</label>
                    <input type="text " class="form-control input-lg" placeholder="mm/dd/yyyy">
                    <input type="text " class="form-control input-lg " placeholder="{{date}}" readonly>
                </div>
                <label>Brief:</label>
                <div class="form-group ">
                    <textarea class="form-control input-lg " id="summernote" name="contentbrief">{{{contentbrief}}}</textarea>
                    <span class="help-block "><a href="http://codemirror.net/ ">Consider adding code Mirror.</a>
                        </span>
                </div>
                <label>Content:</label>
                <div class="form-group ">
                    <textarea class="form-control input-lg " id="summernote2" name="contentsummary">{{{contentsummary}}}</textarea>
                </div>
                <div class="form-group ">
                    <label>Categories:</label>
                    
                    <select class="form-control input-lg" name="category" id="categoryFormList">
                    <option>{{category}}</option>
                    {{#each ../categories}}
                        <option>{{name}}</option>
                        {{/each}}
                    </select>
                    
                    <button type="button" id="newCategory " class="btn btn-xs btn-info " align="right ">Add New Category</button>&nbsp;
                    <button type="button" id="editCategory " class="btn btn-xs btn-warning " align="right ">Edit Categories</button>
                    <br>
                    <span id="addNewCategory "></span>
                    <div id='editCategoryBlock'>
                        <table class='table table-striped table-condensed' style="width:100% ">
                            {{#each ../categories}}
                            <tr>
                                <td class="hidden">{{_id}}</td>
                                <td class="categoryName">{{name}}</td>
                                <td>
                                    <button type='button' class='btn btn-info btn-sm' id='modifyCategory'>Edit</button>
                                </td>
                                <td>
                                    <button type='button' class='btn btn-danger btn-sm' id='removeCategory'>Delete</button>&nbsp;
                                </td>
                            </tr>
                            {{/each}}
                        </table>
                        <div style="text-align: center; ">
                            <button type='button' class='btn btn-warning btn-md' id='cancelModifyCategory'>Cancel</button>&nbsp;
                            <button type='button' class='btn btn-success btn-md' id='cancelModifyCategory'>All Done</button>
                        </div>
                    </div>
                </div>
                <hr>
                <!--<button class="btn btn-default btn-lg " id="preview ">Preview</button>-->
                <button type="submit" class="btn btn-success btn-lg "> Update</button> <button type="button" class="btn btn-warning btn-lg ">Cancel</button></a> <a href="/post/{{_id}}"> <button type="button " class="btn btn-danger btn-lg ">Delete</button></a><a href="/post/{{_id}}"> 
                <br><br><br>
            </form>
            {{/posts}}
        </div>
        <div class="col-md-4 "></div>
        <!-- row class ends -->
    </div>
