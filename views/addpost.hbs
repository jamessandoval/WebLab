<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6" style="align-content: center">
            <h2 class="page-header">Add Post</h2> {{#if errors}} {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
            {{/each}} {{/if}}
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <form method="post" action="/user/addpost">
                <div class="form-group">
                    <label>Title:</label>
                    <input type="text" class="form-control input-lg" placeholder="Title" name="title">
                </div>
                <div class="form-group">
                    <label>State:</label>
                    <select class="form-control input-lg" name="state">
                        <option>Draft</option>
                        <option>Publish</option>
                        <option>Archive</option>
                    </select>
                    <span class="help-block">easily specify who can view</span>
                </div>
                <div class="form-group">
                    <label>URL:</label>
                    <input type="text" class="form-control input-lg" placeholder="URL" name="url" readonly>
                    <span class="help-block">no need to specify here-however, it is part of the model.</span>
               
                </div>
                <div class="form-group" id="datepicker">
                    <label>Date:</label>
                    <input type="text" class="form-control input-lg" placeholder="mm/dd/yyyy">
                </div>
                <label>Brief:</label>
                <div class="form-group">
                    <textarea class="form-control input-lg" id="summernote" name="contentbrief"></textarea>
                    <span class="help-block"><a href="http://codemirror.net/">Consider adding code Mirror.</a>
                        </span>
                </div>
                <label>Content:</label>
                <div class="form-group">
                    <textarea class="form-control input-lg" id="summernote2" name="contentsummary"></textarea>
                </div>
                <div class="form-group">
                    <label>Categories:</label>
                    <select class="form-control input-lg" name="category" id="categoryFormList">
                     {{#each categories}}
                        <option>{{name}}</option>
                    {{/each}}
                    </select>
                    <button type="button" id="newCategory" class="btn btn-xs btn-info" align="right">Add New Category</button>&nbsp;
                    <button type="button" id="editCategory" class="btn btn-xs btn-warning" align="right">Edit Categories</button>
                    <br>
                    <span id="addNewCategory"></span>
                    <div id='editCategoryBlock'>
                        <table class='table table-striped table-condensed' style="width:100%">
                            {{#each categories}}
                            <tr>
                                <td class="hidden">{{_id}}</td>
                                <td class="categoryName">{{name}}</td>
                                <td>
                                    <button type='button' class='btn btn-info btn-sm' id='modifyCategory'>Edit</button>
                                </td>
                                <td>
                                    <button type='button' class='btn btn-danger btn-sm' id='removeCategory'>Delete</button>&nbsp;
                                </td>
                            </tr>
                            {{/each}}
                        </table>
                        <div style="text-align: center;">
                            <button type='button' class='btn btn-warning btn-md' id='cancelModifyCategory'>Cancel</button>&nbsp;
                            <button type='button' class='btn btn-success btn-md' id='cancelModifyCategory'>All Done</button>
                        </div>
                    </div>
                </div>
                <hr>
                <!--<button class="btn btn-default btn-lg" id="preview">Preview</button>-->
                <button type="submit" class="btn btn-success btn-lg">Publish</button>
                <br><br><br>
            </form>
        </div>
        <div class="col-md-4"></div>
        <!-- row class ends -->
    </div>

